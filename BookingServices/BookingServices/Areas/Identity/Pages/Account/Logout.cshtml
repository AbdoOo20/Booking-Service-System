@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="container my-5">
    <div class="card shadow-sm p-4">
        <div class="card-body text-center">
            <h1 class="display-5">@ViewData["Title"]</h1>
            <hr class="my-4">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <p class="lead">Are you sure you want to log out?</p>
                    <button type="submit" class="btn btn-danger btn-lg mt-3">Log out</button>
                </form>
            }
            else
            {
                <p class="text-success lead">You have successfully logged out of the application.</p>
                <a href="/" class="btn btn-primary btn-lg mt-3">Return to Home</a>
            }
        </div>
    </div>
</div>
