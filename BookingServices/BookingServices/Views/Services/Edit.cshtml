@model BookingServices.Data.Service

@{
    ViewData["Title"] = "Edit Service";
}

<h1 class="text-center mb-4">Edit Service</h1>

<div class="container">
    <div class="card shadow p-4">
        <h4 class="mb-4 text-primary">Service Details</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ServiceId" />

            <!-- Name, Location, and Details -->
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter service name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Location" class="form-label"></label>
                    <select asp-for="Location" class="form-control" asp-items="ViewBag.Location">
                        <option value="">-- Select Location --</option>
                    </select>
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>

            <!-- Start Time, End Time, and Quantity -->
            <div class="row">
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="StartTime" class="form-label">Start Time</label>
                    <input asp-for="StartTime" type="time" class="form-control" />
                    <span asp-validation-for="StartTime" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="EndTime" class="form-label">End Time</label>
                    <input asp-for="EndTime" type="time" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
            </div>

            <!-- Financial Information -->
            <h4 class="mb-4 text-primary">Financial Information</h4>
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="InitialPaymentPercentage" class="form-label">Initial Payment Percentage</label>
                    <input asp-for="InitialPaymentPercentage" class="form-control" type="number" min="0" placeholder="0" />
                    <span asp-validation-for="InitialPaymentPercentage" class="text-danger"></span>
                </div>
            </div>

            <!-- Contracts and Categories -->
            <h4 class="mb-4 text-primary">Contract and Category Information</h4>
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Location --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="BaseServiceId" class="form-label">Base Service</label>
                    <select asp-for="BaseServiceId" class="form-control" asp-items="ViewBag.BaseServiceId">
                        <option value="">-- Select Base Service --</option>
                    </select>
                    <span asp-validation-for="BaseServiceId" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="ProviderContractId" class="form-label">Provider Contract</label>
                    <select asp-for="ProviderContractId" class="form-control" asp-items="ViewBag.ProviderContractId">
                        <option value="">-- Select Provider Contrac --</option>
                    </select>
                    <span asp-validation-for="ProviderContractId" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="AdminContractId" class="form-label">Admin Contract</label>
                    <select asp-for="AdminContractId" class="form-control" asp-items="ViewBag.AdminContractId">
                        <option value="">-- Select Admin Contract --</option>
                    </select>
                    <span asp-validation-for="AdminContractId" class="text-danger"></span>
                </div>
            </div>

            <!-- Images and Service Details -->
            <h4 class="mb-4 text-primary">Media and Additional Details</h4>
            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label for="Images" class="form-label">Upload New Images</label>
                    <input type="file" name="Images" class="form-control" multiple />
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Details" class="form-label">Service Details</label>
                    <textarea asp-for="Details" class="form-control" placeholder="Provide additional information about the service"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>
            </div>
            <!-- Action Buttons -->
            <div class="d-flex justify-content-between mt-4">
                <input type="submit" value="Save" class="btn btn-outline-success btn-lg" />
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
