@model BookingServices.Data.ServicePrice

@{
    ViewData["Title"] = "Edit Service Price";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}

<h1 class="text-center head-color">Edit Service Price</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditPrice" method="post">
            <input type="hidden" asp-for="ServiceId" />
            <input type="hidden" asp-for="PriceDate" />

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Prices" asp-route-id="@Model.ServiceId" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}