@model BookingServices.Data.Service

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";

}


@{
    if (ViewData["ServiceBooking"] is not null)
    {
        <div class="alert alert-danger">
            You cannot delete this service because it is currently reserved for some customers
        </div>
        <div class="mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
        </div>
    }
    else
    {
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Service</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2 form-label">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10 form-control">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>

            <form asp-action="Delete">
                <div class="d-flex justify-content-between mt-4">
                    <input type="hidden" asp-for="ServiceId" />
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                </div>
            </form>

        </div>

    }
}
