@model IEnumerable<BookingServices.Data.ProviderContract>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";

}
<link rel="stylesheet" href="~/css/StyleCustom/StyleList.css" />

<h1 class="text-center head-color">Contracts</h1>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<div class="table-responsive">
<table class="table table-hover text-center" id="myTable">
    <thead>
        <tr>
            <th>Title</th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ContractName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>

            <td>
                <div class="d-flex">
                            <a asp-action="Edit" asp-route-id="@item.ContractId" class="btn btn-outline-primary me-2"><i class="fa-solid fa-pen-to-square"></i></a> 
                            <a asp-action="Delete" asp-route-id="@item.ContractId" class="btn btn-outline-danger me-2"><i class="fa-solid fa-trash-can"></i></a>
                        </div>    
            </td>
        </tr>
}
    </tbody>
</table>
</div>
<script src="~/js/datatablesjs.js"></script>