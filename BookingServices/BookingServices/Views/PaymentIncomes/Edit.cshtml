@model BookingServices.Models.PaymentMethodDTO

@{
    ViewData["Title"] = "Edit Payment Gateway";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Payment Gateway</h2>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorMessage"]
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PaymentIncomeId" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Percentage" class="control-label"></label>
        <input asp-for="Percentage" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</form>
