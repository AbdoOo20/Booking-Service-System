@model IEnumerable<BookingServices.Models.ProviderDataVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <form id="searchForm" class="d-flex" onsubmit="return false;">
        <input id="searchInput" class="form-control me-sm-2" type="search" placeholder="Search" oninput="filterProviders()">
        <button id="searchButton" class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    <br />
</div>

<table class="table table-striped table-hover shadow-sm" id="providerTable">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
            <th>@Html.DisplayNameFor(model => model.First().Balance)</th>
            <th>@Html.DisplayNameFor(model => model.First().ReservedBalance)</th>
            <th>@Html.DisplayNameFor(model => model.First().NumberOfServices)</th>
            <th>@Html.DisplayNameFor(model => model.First().Rate)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Balance)</td>
                <td>@Html.DisplayFor(modelItem => item.ReservedBalance)</td>
                <td>@Html.DisplayFor(modelItem => item.NumberOfServices)</td>
                <td>@Html.DisplayFor(modelItem => item.Rate)</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.ProviderId" class="btn btn-sm btn-info mx-1">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ProviderId" class="btn btn-sm btn-warning mx-1">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ProviderId" class="btn btn-sm btn-danger mx-1">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function filterProviders() {
        const searchInput = document.getElementById("searchInput").value.toLowerCase();
        const providerTable = document.getElementById("providerTable");
        const rows = providerTable.getElementsByTagName("tr");

        for (let i = 1; i < rows.length; i++) {  // Start from 1 to skip header row
            const cells = rows[i].getElementsByTagName("td");
            let found = false;

            // Check each cell in the row for the search term
            for (let j = 0; j < cells.length; j++) {
                const cellText = cells[j].textContent.toLowerCase();
                if (cellText.includes(searchInput)) {
                    found = true;
                    break;
                }
            }

            // Show or hide the row based on the search term
            rows[i].style.display = found ? "" : "none";  // Show if found, hide otherwise
        }
    }
</script>

