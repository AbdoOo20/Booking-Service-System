@model BookingServices.Models.Provider_ResetPassowrd

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}

<div class="container my-5">
    <h1>Reset Password</h1>

    <form asp-action="ResetPassword" method="post">
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.CurrentPassword)</h5>
            <input class="form-control" asp-for="CurrentPassword" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.NewPassword)</h5>
            <input class="form-control" asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.ConfirmNewPassword)</h5>
            <input class="form-control" asp-for="ConfirmNewPassword" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-lg w-100">Reset Password</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary w-100">Back to Profile</a>
    </div>
</div>
