@model BookingServices.Models.Provider_ResetPassowrd

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}

<div class="container my-5">
    <h1 class="text-center head-color">Change Password</h1>

    <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.CurrentPassword)</h5>
            <input class="form-control" asp-for="CurrentPassword" type="password" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.NewPassword)</h5>
            <input class="form-control" asp-for="NewPassword" type="password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="col-12 my-2">
            <h5>@Html.DisplayNameFor(m => m.ConfirmNewPassword)</h5>
            <input class="form-control" asp-for="ConfirmNewPassword" type="password" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-primary btn-lg w-100">Update</button>
    </form>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary w-100">Back to Profile</a>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
           
            $('#resetPasswordForm input').on('blur input', function () {
                $(this).valid();
            });
        });
    </script>
}

