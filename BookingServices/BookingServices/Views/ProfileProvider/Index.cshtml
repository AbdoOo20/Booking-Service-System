@model BookingServices.Models.ProviderDataVM

@{
    ViewData["Title"] = "Profile";
}

<div class="container my-5">
    <h1>Profile</h1>
    @* Balance *@
    <div class="container-fluid bg-light border border-dark rounded p-4">
        <div class="row text-center mb-4">
            <div class="col">
                <h5>Money can be withdrawn</h5>
                <p>@Html.DisplayFor(model => model.Balance)</p>
            </div>
            <div class="col">
                <h5>Pending balance</h5>
                <p>@Html.DisplayFor(model => model.ReservedBalance)</p>
            </div>
            <div class="col">
                <h5>Total Balance</h5>
                <p>@(Model.Balance + Model.ReservedBalance)</p> 
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <p class="mb-0 me-3">You can request your profits from your account by withdrawing from your bank account.</p>
            <button class="btn btn-success">Withdraw</button>
        </div>
    </div>
    @* Information *@
    <div class="container mt-5">
        <div class="row">
            <div class="col-6">
                <div class="card p-3" style="height: 200px; overflow-y: auto;">
                    <h5 class="card-title">Information</h5>
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-1x"></i>
                        <span class="ms-1">@Model.Name</span>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-envelope fa-1x"></i>
                        <span class="ms-1">@Model.Email</span>
                    </div>
                    <div class="mb-3">
                        <i class="fas fa-phone fa-1x"></i>
                        <span class="ms-1">@Model.Phone</span>
                    </div>

                    <div class="mb-3">
                        <i class="fas fa-star text-warning"></i>
                        <span class="ms-1">3.5</span>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="card p-3" style="height: 200px; overflow-y: auto;">
                    <h5 class="card-title">Details</h5>
                    <div class="card-text">
                        <p style="font-size: 1rem;">@Model?.ServiceDetails</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* Edit *@
    <div class="container mt-3">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-primary btn-lg w-100">Edit</button>
            </div>
        </div>
    </div>
</div>
