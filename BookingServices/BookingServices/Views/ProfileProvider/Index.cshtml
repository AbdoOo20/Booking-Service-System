@model BookingServices.Models.ProviderDataVM

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}

<div class="container my-5">
    <h1>Profile</h1>
    @* Balance *@
    <div class="container-fluid bg-light border border-dark rounded p-4">
        <div class="row text-center mb-4">
            <div class="col">
                <h5>Money can be withdrawn</h5>
                <p>@Html.DisplayFor(model => model.Balance) $</p>
            </div>
            <div class="col">
                <h5>Pending Balance</h5>
                <p>@Html.DisplayFor(model => model.ReservedBalance) $</p>
            </div>
            <div class="col">
                <h5>Total Balance</h5>
                <p>@(Model.Balance + Model.ReservedBalance) $</p> 
            </div>
        </div>
        <div class="d-flex justify-content-center align-items-center">
            <p class="mb-0 me-3">You can request your profits from your account by withdrawing from your bank account.</p>
            <button class="btn btn-primary">Withdraw</button>
        </div>
    </div>
    @* Static Info *@
    <div class="col-12 mt-3">
        <div class="card p-3">
            <h5 class="card-title">Information</h5>
            <div class="mb-3">
                <i class="fas fa-envelope fa-1x"></i>
                <span class="ms-1">@Model.Email</span>
            </div>
            <div>
                <i class="fas fa-star text-warning"></i>
                <span class="ms-1">3.5</span>
            </div>
        </div>
    </div>
    @* Information *@
    <form asp-action="Edit" method="post">
        @Html.HiddenFor(model => model.ProviderId)
        <div class="col-12 my-2">
            <h5>Name</h5>
            <input class="form-control" name="Name" value="@Model.Name" />
        </div>
        <div class="col-12 my-2">
            <h5>Details</h5>
            <textarea class="form-control" name="ServiceDetails" rows="4">@Model.ServiceDetails</textarea>
        </div>
        <div class="col-12 my-2">
            <h5>Phone</h5>
            <input class="form-control" name="Phone" value="@Model.Phone" />
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">Edit</button>
    </form>
