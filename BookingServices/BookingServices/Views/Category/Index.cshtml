@model IEnumerable<BookingServices.Data.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

<h1 class="mt-3">Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-link" title="Edit">
                        <i class="fas fa-edit text-warning" style="font-size: 24px;"></i>
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-link" title="Delete">
                        <i class="fas fa-trash-alt text-danger" style="font-size: 24px;"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
