@model BookingServices.Data.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center head-color">Delete Category</h1>

<h3 class="head-color">Are you sure you want to delete this category?</h3>

<div>
    <h4>@Model.Name</h4>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CategoryId" />
    <button type="submit" class="btn btn-outline-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
</form>
