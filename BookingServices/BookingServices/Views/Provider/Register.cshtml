@model BookingServices.ViewModel.OfflineCustomer

@{
    ViewData["Title"] = "Register Offline Customer";
    Layout = "~/Views/Shared/_LayoutProvider.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Register Offline Customer</h4>
        </div>
        <div class="card-body">
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @ViewData["SuccessMessage"]
                </div>
            }

            <form asp-action="Register" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="AlternativePhone" class="form-label">Alternative Phone</label>
                            <input asp-for="AlternativePhone" class="form-control" />
                            <span asp-validation-for="AlternativePhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SSN" class="form-label">SSN</label>
                            <input asp-for="SSN" class="form-control" />
                            <span asp-validation-for="SSN" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
