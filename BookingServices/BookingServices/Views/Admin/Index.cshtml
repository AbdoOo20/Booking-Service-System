@model IEnumerable<ServicesVM>
@{
    ViewData["Title"] = "Requested Services";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container mt-5">
    <h2 class="text-center">Requested Services</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Service Name</th>
                <th>Location</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ServiceName</td>
                    <td>@service.Location</td>
                    <td>@service.Details</td>
                    <td>
                        @* <a class="btn btn-primary btn-sm" asp-action="Accept" asp-route-id="@service.Id">Accept</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Reject" asp-route-id="@service.Id">Reject</a> |*@
                        <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@service.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>