@model IEnumerable<ServicesVM>
@{
    ViewData["Title"] = "Requested Services";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2 class="text-center">Requested Services</h2>
<div class="table-responsive">
        <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Service Provider</th>
                <th>Service Name</th>
                <th>Location</th>
                <th>Details</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.ProviderName</td>
                    <td>@service.ServiceName</td>
                    <td>@service.Location</td>
                    <td>@service.Details</td>
                    <td> <a class="btn btn-secondary btn-sm" asp-action="Details" asp-route-id="@service.Id">Details</a> </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/datatablesjs.js"></script>