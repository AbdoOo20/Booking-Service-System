@model bookingViewModel
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container my-5">
    <h1 class="text-center head-color">
        Bookings
    </h1>
    


    @if (Model.Bookings != null && Model.Bookings.Any())
    {

        <form class="p-4 border rounded shadow bg-light mb-4">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="myTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Event Date</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Booking Date</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Payment Type</th>
                            <th>Customer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model.Bookings)
                        {
                            <tr>
                                <td>@booking.EventDate.ToShortDateString()</td>
                                <td>@booking.Quantity</td>
                                <td>@booking.Price</td>
                                <td>@booking.BookDate.ToShortDateString()</td>
                                <td>@booking.Type</td>
                                <td>@booking.Status</td>
                                <td>@booking.CashOrCashByHandOrInstallment</td>
                                <td>@booking.Customer.Name</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
        <!-- Go Back Button -->
        <div class="text-center">
            <a class="btn btn-primary" href='~/Admin/ProviderBookingSummary'>Go Back</a>
        </div>
    }
    else
    {
        <p class="text-center">No bookings found.</p>
    }

</div>
<script src="~/js/datatablesjs.js"></script>
