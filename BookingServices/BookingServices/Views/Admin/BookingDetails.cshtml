@model IEnumerable<BookingViewModel>
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="container my-5">
    <h1 class="text-center head-color">
        Bookings
    </h1>

    @if (Model != null)
    {
        <form class="p-4 border rounded shadow bg-light mb-4">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="myTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Service</th>
                            <th>Event Date</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Booking Date</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Payment Type</th>
                            <th>Customer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.ServiceName</td>
                                <td>@booking.EventDate.ToShortDateString()</td>
                                <td>@booking.Quantity</td>
                                <td>@booking.Price</td>
                                <td>@booking.BookDate.ToShortDateString()</td>
                                <td>@booking.Type</td>
                                <td>@booking.Status</td>
                                <td>@booking.PaymentIncome</td>
                                <td>@booking.CustomerName</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>
    }
    else
    {
        <p class="text-center">No bookings found for the selected dates.</p>
    }

</div>
<script src="~/js/datatablesjs.js"></script>