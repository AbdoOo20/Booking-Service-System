@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Provider Booking Summary";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/StyleCustom/StyleList.css" />
    <h1 class="text-center head-color">Provider Booking Summary</h1>
<div class="table-responsive">
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Provider Name</th>
                <th>Total Booked Services</th>
                <th>Total Amount (Accepted Bookings)</th>
                <th>Booking Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var provider in Model)
            {
                <tr>
                    <td>@provider.ProviderName</td>
                    <td>@provider.TotalBookings</td>
                    <td>@provider.TotalAmount.ToString("C")</td>
                    <td> <a class="btn btn-outline-warning btn-sm" asp-action="BookingDetails" asp-route-id="@provider.providerId"><i class="fa-solid fa-circle-info"></i></a> </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/datatablesjs.js"></script>