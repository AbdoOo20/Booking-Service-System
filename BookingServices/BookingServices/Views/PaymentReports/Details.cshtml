@model IEnumerable<BookingServices.Models.PaymentReportDetailsViewModel>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<link rel="stylesheet" href="~/css/StyleCustom/StyleList.css" />

<div class="table-container">
    <h5>The Booking of @Model.FirstOrDefault()?.PaymentMethod</h5>
    <div class="table-responsive">
    <table class="table mt-5" id="myTable">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Provider Name
                </th>
                <th>
                    Service Name
                </th>
                <th>
                    Booking Date
                </th>
                <th>
                    Booking Price
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingData)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingPrice)
                </td>
            </tr>
    }
        </tbody>
    </table>
    </div>
    <a class="btn btn-info" asp-action="Index">Back</a>
</div>
<script src="~/js/datatablesjs.js"></script>